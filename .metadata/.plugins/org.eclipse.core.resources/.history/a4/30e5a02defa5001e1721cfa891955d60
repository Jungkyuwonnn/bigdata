package 단순if문;

import java.util.Scanner;

public class Ex02단순if문예제 {

	public static void main(String[] args) {
		//1.정수 입력받기
		//2.출력하기
		//3. if문 만들기
		//4. 결과 출력
		
		Scanner sc = new Scanner(System.in);
		System.out.print("정수를 입력하세요");
		int num1 = sc.nextInt();
		if(num1 %3 ==0 && num1 % 5 ==0) {
			System.out.println("3과 5의 배수입니다.");
			
		}
	}

}
